<HTML>
  <BODY>
    This is the index of employees
    <br>
    List of employees:
    <table>
      <tr>
        <th>Name</th>
        <th>Dept</th>
        <th>Blood Group</th>
      </tr>
      <% @employees.each do |emp| %>
      <tr>
        <th><%= emp.name %></th>
        <th><%= emp.dept %></th>
        <th><%= emp.blood_group %></th>
        <th><%= link_to "View Profile", emp %></th>
        <th><%= button_to "Delete Entry", emp, method: :delete,data: {confirm: 'Are you sure?', class: "btn btn-danger"} %> </th>
      </tr>
      <% end %>
    </table>
    <h1><%= link_to 'Add new Employee', new_employee_path %></h1>
  </BODY>
</HTML>
