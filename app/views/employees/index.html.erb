<HTML>
  <BODY>
    <div class='container'>
    <div class='row'>
    This is the index of employees
    <br>
    List of employees:
    <table class="table table-hover" style="width: 816px">
      <thead>
        <th>Name</th>
        <th>Dept</th>
        <th>Blood Group</th>
      </thead>
      <% @employees.each do |emp| %>
      <tr>
        <th><%= emp.name %></th>
        <th><%= emp.dept %></th>
        <th><%= emp.blood_group %></th>
        <th><%= link_to "View Profile", emp %></th>
      </tr>
      <% end %>
    </table>
    <h1><%= button_to 'Add new Employee', new_employee_path, :method => :get , :class => "btn btn-primary" %></h1>
    </div>
    </div>
  </BODY>
</HTML>
