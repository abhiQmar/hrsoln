<html>
  <head>
    <link rel="stylesheet" href="//code.jquery.com/ui/1.11.4/themes/smoothness/jquery-ui.css">
    <script src="//code.jquery.com/ui/1.11.4/jquery-ui.js"></script>
    <script>
      $(function() {
        $( "#employee_doj" ).datepicker({dateFormat: 'dd-mm-yy' });
        $( "#employee_dob" ).datepicker({dateFormat: 'dd-mm-yy' });
      });
    </script>
  </head>
  <body>
  <div class="container">
    <div class="jumbotron">
      <h3>Enter the Employee's details below:</h3>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-offset-2 col-sm-8">
    <%= form_for :employee, :html =>{class: "form-horizontal"}, url: employees_path do |emp| %>
    <div class="form-group">
      <%= emp.label :name, class: "control-label col-sm-2" %>
      <div class="col-sm-10">
        <%= emp.text_field :name, class: "form-control", placeholder: "Enter Name" %>
      </div>
    </div>
    <div class="form-group">
      <%= emp.label :dept, class: "control-label col-sm-2"  %>
      <div class="col-sm-10">
        <%= emp.text_field :dept, class: "form-control", placeholder: "Enter Name"  %>
      </div>
    </div>
    <div class="form-group">
      <%= emp.label :designation, class: "control-label col-sm-2"  %>
      <div class="col-sm-10">
        <%= emp.text_field :designation, class: "form-control", placeholder: "Enter Designation"  %>
      </div>
    </div>
    <div class="form-group">
      <%= emp.label :DOJ, class: "control-label col-sm-2"  %>
      <div class="col-sm-10">
        <%= emp.text_field :doj, class: "form-control", placeholder: "Enter Date of Joining"  %>
      </div>
    </div>
    <div class="form-group">
      <%= emp.label :Address, class: "control-label col-sm-2"  %>
      <div class="col-sm-10">
        <%= emp.text_field :address, class: "form-control", placeholder: "Enter Address"  %>
      </div>
    </div>
    <div class="form-group">
      <%= emp.label :blood_group, class: "control-label col-sm-2"  %>
      <div class="col-sm-10">
        <%= emp.text_field :blood_group, class: "form-control", placeholder: "Enter Blood group"  %>
    </div>
    </div>
    <div class="form-group">
      <%= emp.label :dob, class: "control-label col-sm-2"  %>
      <div class="col-sm-10">
        <%= emp.text_field :dob, class: "form-control", placeholder: "Enter Date of Birth"  %>
      </div>
    </div>
    <div class="form-group">
      <%= emp.label :total_leaves, class: "control-label col-sm-2"  %>
      <div class="col-sm-10">
        <%= emp.text_field :total_leaves, class: "form-control", placeholder: "Enter Total Leaves"  %>
      </div>
    </div>
    <div class="form-group">
        <%= submit_tag 'Save', :class => 'col-sm-3 btn btn-success' %>
    </div>
    <% end %>
  </div>
  </div>
</div>
  </body>
</html>
